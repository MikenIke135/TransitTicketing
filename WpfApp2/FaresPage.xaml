<UserControl x:Class="WpfApp2.FaresPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
		Height="600" Width="800">
	<UserControl.Resources>
        <System:Double x:Key="margin-y">40</System:Double>
        <System:Double x:Key="margin-y2">30</System:Double>

        <System:Double x:Key="margin-x">20</System:Double>
        <System:Double x:Key="colWidth">170</System:Double>

        <System:Double x:Key="header-height">50</System:Double>

        <System:Double x:Key="main-margin-x">40</System:Double>
        <System:Double x:Key="main-colWidth">220</System:Double>
        <System:Double x:Key="main-colHeight">300</System:Double>

        <System:Double x:Key="minus-btn-margin-y">10</System:Double>
        <System:Double x:Key="minus-btn-height">50</System:Double>
        <System:Double x:Key="minus-btn-width">50</System:Double>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Source={StaticResource header-height}}"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <!--HEADER-->

        <Grid Name="header" Grid.Row="0" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding Source={StaticResource margin-x}}"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource margin-x}}"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource margin-x}}"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="1" Foreground="white" HorizontalAlignment="Left">Left</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" Foreground="white" HorizontalAlignment="Center">Centre</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="3" Foreground="white" HorizontalAlignment="Right">Right</TextBlock>
        </Grid>

        <Grid Name="body" Grid.Row="1" Margin="0,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding Source={StaticResource margin-x}}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource main-colWidth}}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource main-margin-x}}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource main-colWidth}}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource main-margin-x}}"></ColumnDefinition>
                <ColumnDefinition Width="{Binding Source={StaticResource main-colWidth}}"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="{Binding Source={StaticResource margin-y}}"></RowDefinition>
                <RowDefinition Height="{Binding Source={StaticResource main-colHeight}}"></RowDefinition>
                <RowDefinition Height="{Binding Source={StaticResource minus-btn-margin-y}}"></RowDefinition>
                <RowDefinition Height="{Binding Source={StaticResource minus-btn-height}}"></RowDefinition>
                <RowDefinition Height="{Binding Source={StaticResource margin-y2}}"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"></TextBlock>
            <Grid Grid.Row="1" Grid.Column="1" Background="Aqua">
				<Button x:Name="Adult" Content="" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="#FF00F3FF" HorizontalAlignment="Left" Width="221"></Button>
                <StackPanel>
                    <TextBlock Width="{Binding Source={StaticResource main-colWidth}}"></TextBlock>
                    <TextBlock FontSize="36" HorizontalAlignment="Center">Adult</TextBlock>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" Padding="5">Price</TextBlock>
                    <Grid Margin="0 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0">ICON</TextBlock>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center">QTY</TextBlock>
                    </Grid>
                    <TextBlock FontSize="48" HorizontalAlignment="Center" Margin="0 -10">+</TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="3" Background="Aqua">
                <Button x:Name="Youth" Content="" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="#FF00F3FF"></Button>
                <StackPanel>
                    <TextBlock Width="{Binding Source={StaticResource main-colWidth}}"></TextBlock>
                    <TextBlock FontSize="36" HorizontalAlignment="Center">Youth</TextBlock>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" Padding="5">Price</TextBlock>
                    <Grid Margin="0 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0">ICON</TextBlock>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center">QTY</TextBlock>
                    </Grid>
                    <TextBlock FontSize="48" HorizontalAlignment="Center" Margin="0 -10">+</TextBlock>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="5" Background="Aqua">
                <Button x:Name="Senior" Content="" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="#FF00F3FF"></Button>
                <StackPanel>
                    <TextBlock Width="{Binding Source={StaticResource main-colWidth}}"></TextBlock>
                    <TextBlock FontSize="36" HorizontalAlignment="Center">Senior</TextBlock>
                    <TextBlock FontSize="24" HorizontalAlignment="Center" Padding="5">Price</TextBlock>
                    <Grid Margin="0 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0">ICON</TextBlock>
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center">QTY</TextBlock>
                    </Grid>
                    <TextBlock FontSize="48" HorizontalAlignment="Center" Margin="0 -10">+</TextBlock>
                </StackPanel>
            </Grid>

            <!--Minus Buttons-->
            <Grid Grid.Row="3" Grid.Column="1" Background="OrangeRed">
                <Button x:Name="Minus1" Content="-"  Margin="65,-33,60,0" FontWeight="Bold" FontSize="72" ScrollViewer.VerticalScrollBarVisibility="Disabled" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="83" Width="96">
                    <Button.Background>
                        <SolidColorBrush Color="#FF273A28" Opacity="0"/>
                    </Button.Background>
                </Button>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="3" Background="OrangeRed">
                <Button x:Name="Minus2" Content="-"  Margin="65,-33,60,0" FontWeight="Bold" FontSize="72" ScrollViewer.VerticalScrollBarVisibility="Disabled" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="83" Width="96">
                    <Button.Background>
                        <SolidColorBrush Color="#FF273A28" Opacity="0"/>
                    </Button.Background>
                </Button>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="5" Background="OrangeRed">
                <Button x:Name="Minus3" Content="-"  Margin="65,-33,60,0" FontWeight="Bold" FontSize="72" ScrollViewer.VerticalScrollBarVisibility="Disabled" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Height="83" Width="96">
                    <Button.Background>
                        <SolidColorBrush Color="#FF273A28" Opacity="0"/>
                    </Button.Background>
                </Button>
            </Grid>
            <TextBlock Grid.Row="2"></TextBlock>

        </Grid>


		<local:FooterNavigation Grid.Row="2"></local:FooterNavigation>
	</Grid>
</UserControl>
